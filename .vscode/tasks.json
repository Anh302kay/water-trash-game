{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build debug",
            "command": "E:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++20",
                "-Wall",
                "${workspaceFolder}\\source\\*.cpp",
                "-I",
                "${workspaceFolder}\\include\\",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf",
                "-lzip",
                //"-mwindows",
                "-o",
                "${workspaceFolder}\\bin\\debug\\${workspaceFolderBasename}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build release",
            "command": "E:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-O3",
                "-g",
                "-std=c++20",
                "-Wall",
                "${workspaceFolder}\\source\\*.cpp",
                "-I",
                "${workspaceFolder}\\include\\",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf",
                "-lzip",
                "-mwindows",
                "-o",
                "${workspaceFolder}\\bin\\release\\${workspaceFolderBasename}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}